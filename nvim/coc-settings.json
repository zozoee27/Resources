{
  "solargraph.diagnostics": true,
  "solargraph.autoformat": true,
  "solargraph.formatting": true,
  "solargraph.hover": true,
  "solargraph.transport": "stdio",
  "eslint.packageManager": "yarn",
  "eslint.nodePath": ".yarn/sdks",
  "eslint.format.enable": true,
  "eslint.autoFixOnSave": true,
  "workspace.workspaceFolderCheckCwd": false,
  "tsserver.tsdk": ".yarn/sdks/typescript/lib",
  "cSpell": {
    "language": "en",
    "enabled": true,
    "allowCoumpoundWords": true,
    "enabledLanguageIds": [
      "csharp",
      "go",
      "javascript",
      "javascriptreact",
      "markdown",
      "php",
      "plaintext",
      "typescript",
      "typescriptreact",
      "yml",
      "ruby"
    ],
    "showStatus": true
  },
  "languageserver": {
    "ruby-lsp": {
      "command": "ruby-lsp",
      "args": [],
      "filetypes": [
        "ruby"
      ],
      "rootPatterns": [],
      "initializationOptions": {},
      "settings": {}
    },
    "sorbet": {
      "command": "bundle",
      "args": [
        "exec",
        "srb",
        "typecheck",
        "--lsp"
      ],
      "filetypes": [
        "ruby"
      ],
      "rootPatterns": [],
      "initializationOptions": {},
      "settings": {}
    },
    "graphql": {
      "command": "graphql-lsp",
      "args": [
        "server",
        "-m",
        "stream"
      ],
      "filetypes": [
        "typescript",
        "typescriptreact",
        "graphql"
      ]
    },
    "rubocop": {
      "command": "bundle",
      "args": [
        "exec",
        "rubocop",
        "--lsp"
      ],
      "filetypes": [
        "ruby"
      ],
      "rootPatterns": [
        ".git",
        "Gemfile"
      ],
      "requireRootPattern": true
    }
  },
  "cSpell.userWords": [
    "Configurer",
    "Metafields",
    "SHIPIT",
    "Shopify's",
    "Zoey",
    "cadetgear",
    "cstrong",
    "dont",
    "endcodeblock",
    "exampleshop",
    "fullpage",
    "jiangmiao",
    "junegunn",
    "metafield",
    "myshopify",
    "neoclide",
    "nilable",
    "perma",
    "preload",
    "shopifyapiauthsesion",
    "shopifyapiauthsession",
    "shopifyapicontext",
    "shopifyapicontextsetup",
    "snowdevil",
    "statsd",
    "tpope"
  ],
  "coc.preferences.formatOnSave": true,
}
